<main class="grey darken-1">
  <center>
    <div class="container">
      <div class="card-panel hoverable" style="display: inline-block;">
        <h5>Crea tu Cuenta</h5>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col m12 s12">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <div class="col m12 s12">
              <%= f.label 'Contraseña' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> Caracteres Mínimo)</em>
              <% end %>
              <%= f.password_field :password%>
            </div>
          </div>

          <div class="row">
            <div class="col m12 s12">
              <%= f.label 'Confirmacion Contraseña' %><br />
              <%= f.password_field :password_confirmation %>
            </div>            
          </div>

          <div class="">
            <%= f.submit "Crear Cuenta", class:'btn btn-lg grey darken-1 white-text' %>
          </div>
        <% end %>

        <div class="center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </center>
</main>