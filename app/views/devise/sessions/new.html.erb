<main class="grey darken-1">
  <center>
    <div class="container">
      <div class="card-panel hoverable" style="display: inline-block;">
        <div class="">
          <h5> Iniciar sesión</h5>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="col m12 s12">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, required:'true' %>
              </div>
            </div>
            <div class="row">
              <div class="col m12 s12">
                <%= f.label :password %><br />
                <%= f.password_field :password, required:'true' %>
              </div>
            </div>
            <div>
              <%= f.submit "Iniciar Sesión", class:'btn btn-lg white-text grey darken-1' %>
            </div>
          <% end %>

          <div class="center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>  
  </center>
</main>
