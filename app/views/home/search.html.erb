<div class="container">
  <%= render 'form' %>
</div>
  <div class="">
    <div class="row">
      <div class="container-fluid">
        <div class="col m6 s12 hoverable">
          <div class="card center white-text grey darken-1">
            <h5>UF</h5>
          </div>
          <div class="row">
            <div class="col m12">
              <div class="row">
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Mínimo: <%= @currency[:uf][:min] %></span>
                </div>
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Máximo: <%= @currency[:uf][:max] %></span>
                </div>
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Promedio: <%= @currency[:uf][:avg] %></span>
                </div>
              </div>
              <%=line_chart @uf_data, xtitle: "Fechas", ytitle: "Valores", min: @currency[:uf][:min], max: @currency[:uf][:max] %>
            </div>
          </div>
        </div>

        <div class="col m6 s12 hoverable">
          <div class="card center white-text grey darken-1">
            <h5>Dolar</h5>
          </div>
          <div class="row">
            <div class="col m12">
              <div class="row">
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Mínimo: <%= @currency[:dolar][:min] %></span>
                </div>
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Máximo: <%= @currency[:dolar][:max] %></span>
                </div>
                <div class="col m4 s4">
                  <span class="new badge green white-text" data-badge-caption="">Promedio: <%= @currency[:dolar][:avg] %></span>
                </div>
              </div>
              <%= line_chart @dolar_data, xtitle: "Fechas", ytitle: "Valores", min: @currency[:dolar][:min], max: @currency[:dolar][:max] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
